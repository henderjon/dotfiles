// Place your settings in this file to overwrite the default settings
{
    // EDITOR SETTINGS
    "editor.fontFamily": "JetBrains Mono, Fira Code, monospace",
    "editor.fontSize": 13,
    "editor.fontLigatures": true,
    "debug.console.fontSize": 13,
    "editor.insertSpaces": false,
    "editor.tabCompletion": "on",
    "editor.rulers": [
        {"column":72, "color":"#626262"},
        {"column":80, "color":"#ffffff4d"},
    ],
    "editor.wordWrap": "off",
    "editor.hover.enabled": false,
    "editor.renderLineHighlight": "all",
    "editor.wordSeparators": "`~!@#%^&*()-=+[{]}\\|;:'\",.<>/?",
    "editor.minimap.showSlider": "always",
    "editor.renderControlCharacters": false,
    "editor.suggestSelection": "first",
    "editor.renderWhitespace": "selection",
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "editor.autoClosingOvertype": "never",
    "editor.minimap.renderCharacters": false,
    "editor.lineHeight": 22,
    "editor.autoSurround": "never",
    "editor.autoClosingDelete": "never",
    "editor.suggest.showMethods": true,
    "editor.suggest.preview": true,
    "editor.acceptSuggestionOnEnter": "on",
    "editor.snippetSuggestions": "top",
    "editor.guides.indentation": true,
    "editor.bracketPairColorization.enabled": false,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.selectionHighlight": false,
    "editor.occurrencesHighlight": false,
    // "editor.fontLigatures": "'ss05', 'cv16', 'ss03', 'onum'",
    "editor.semanticTokenColorCustomizations": {
        "enabled": true, // enable for all themes
        // "rules": {
        //     "*.static": {
        //         "foreground": "#ff0000",
        //         "fontStyle": "bold"
        //     },
        //     "type": {
        //         "foreground": "#00aa00"
        //     }
        // }
    },
    "editor.quickSuggestions": {
        "other": "off"
    },

    // WORKBENCH
    "workbench.iconTheme": null,
    // "workbench.list.keyboardNavigation": "filter",
    "workbench.list.defaultFindMode": "highlight",
    "workbench.list.typeNavigationMode": "automatic",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.list.openMode": "doubleClick",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.preferredDarkColorTheme": "Monokai22",
    "workbench.preferredHighContrastColorTheme": "Monokai",
    "workbench.preferredHighContrastLightColorTheme": "Monokai",
    "workbench.preferredLightColorTheme": "Monokai",
    "workbench.colorTheme": "Monokai22",
    // "workbench.activityBar.visible": false,
    "workbench.colorCustomizations": {
		"editor.findMatchHighlightBackground": "#eb5e0055", // generated value
    },

    // TERMINAL
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.defaultProfile.osx": "zsh",
    // "terminal.integrated.shell.linux": "/bin/zsh",
    // "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.inheritEnv": false,
    // "terminal.integrated.allowChords": false,
    "terminal.integrated.fontSize":13,
    "terminal.integrated.cursorBlinking": true,

    // WINDOW
    "window.titleBarStyle": "native",
    "window.title": "${activeEditorLong}${separator}${rootName}",

    // DOTFILES & SETTINGS SYNC
    "dotfiles.repository": "henderjon/dotfiles",
    "dotfiles.targetPath": "~/dotfiles",
    "dotfiles.installCommand": "~/dotfiles/bootstrap.sh",
    "settingsSync.ignoredSettings": [
        "php.executablePath",
        "php.debug.executablePath",
        "php.validate.executablePath"
    ],

    // FILES
    "files.eol": "\n", // formatting only supports LF line endings
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },

    // PHP
    "php.validate.executablePath": "/opt/homebrew/opt/php@7.4/bin/php",
    "php.debug.executablePath": "/opt/homebrew/opt/php@7.4/bin/php",
    "php.executablePath": "/opt/homebrew/opt/php@7.4/bin/php",

    // HTML
    "html.autoCreateQuotes": false,

    // CSS
    "css.hover.references": false,

    // GIT
    "git.autofetch": true,
    "git.mergeEditor": true,

    // GO
    "go.formatTool": "goimports",
    "go.useLanguageServer": true,
    "go.toolsManagement.autoUpdate": true,
    "[go]": {
        "editor.snippetSuggestions": "none",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSaveTimeout": 3000,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "[gopls]": {
        "usePlaceholders":         true, // add parameter placeholders when completing a function
        "completionDocumentation": true, // for documentation in completion items
        // Experimental settings
        "completeUnimported":      true, // autocomplete unimported packages
        "watchFileChanges":        true,  // watch file changes outside of the editor
        "deepCompletion":          true,     // enable deep completion
    },

    // PYTHON
    "python.jediEnabled": false,
    "python.languageServer": "Default",
    "[python]": {
        "editor.formatOnType": true
    },

    // MISC
    "extensions.ignoreRecommendations": false,
    "cSpell.language": "en,en-US",
    "java.errors.incompleteClasspath.severity": "ignore",
    "vsicons.dontShowNewVersionMessage": true,
    "oneDarkPro.bold": true,
    "update.mode": "manual",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },

    "json.schemas": [],

    "timeline.showView": true,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    "[markdown]": {
        "editor.wordWrap": "off"
    },

    "rainbow_csv.enable_cursor_position_info": false,
}
